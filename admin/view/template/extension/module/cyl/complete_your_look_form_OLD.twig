$('input[name=\'show_product\']').autocomplete({
    'source': function(request, response) {
        $.ajax({
            url: 'index.php?route=extension/complete_your_look/autocomplete&user_token={{ user_token }}&filter_name=' +  encodeURIComponent(request),
            dataType: 'json',
            success: function(json) {
                response($.map(json, function(item) {
                    return {
                        label: item['name'],
                        value: item['product_id']
                    }
                }));
            }
        });
    },
    'select': function(item) {
        $('input[name=\'show_product\']').val('');

        $('#show-in-product' + item['value']).remove();

        $('#show-in-product').append('<div id="show-in-product' + item['value'] + '"><i class="fa fa-minus-circle"></i> ' + item['label'] + '<input type="hidden" name="show_in_product[]" value="' + item['value'] + '" /></div>');
