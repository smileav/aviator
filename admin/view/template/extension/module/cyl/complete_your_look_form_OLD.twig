$('.select-connection-position').on('change', function() {
    var selected = parseInt($(this).find(":selected").val());

    if (selected) {
        $(this).closest('.panel-body').find('.form-group-connection-position').show(1000);
    } else {
        $(this).closest('.panel-body').find('.form-group-connection-position').hide(1000);
    }
});

