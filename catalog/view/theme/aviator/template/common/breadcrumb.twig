<div id="breadcrumb"><ul class="breadcrumb" itemscope itemtype="https://schema.org/BreadcrumbList">{% for i,breadcrumb in breadcrumbs %}{% if (i+1 < breadcrumbs|length) %}<li itemprop="itemListElement" itemscope itemtype="http://schema.org/ListItem"><a href="{{ breadcrumb.href }}" itemprop="item">{% if (i == 0) %}<meta itemprop="name" content="{{ breadcrumb.text }}"/><span>{{ breadcrumb.text }}</span>{% else %}<span>{{ breadcrumb.text }}</span>{% endif %}</a><meta itemprop="position" content="{{ i+1 }}"/></li>{% else %}<li itemprop="itemListElement" itemscope itemtype="http://schema.org/ListItem"><link itemprop="item" href="{{ breadcrumb.href }}">{% if (i == 0) %}<meta itemprop="name" content="Главная"/><span>{{ breadcrumb.text }}</span>{% else %}<span itemprop="name">{{ breadcrumb.text }}</span>{% endif %}<meta itemprop="position" content="{{ i+1 }}"/></li>{% endif %}{% endfor %}</ul></div>
