<style>
.modal-open #modal-size {
    text-align: center;
    z-index: 10000;
}
.modal-open .modal-backdrop {
    z-index: 9999;
}
.modal-dialog {
    display: inline-block;
    text-align: left;
    vertical-align: middle;
    margin: auto;
}
.modal-head {
    font-size: 32px;
    font-weight: 500;
    line-height: 100%;
    text-transform: uppercase;
}
.modal-options > div {
    display: -webkit-flex;
    display: flex;
    -webkit-align-items: center;
    align-items: center;
    -webkit-justify-content: center;
    justify-content: center;
    font-size: 20px;
    font-weight: 500;
    width: 73px;
    height: 76px;
    border: 2px solid #000;
    margin-right: 8px;
    -webkit-transition: background-color .3s ease;
    transition: background-color .3s ease-in-out;
    cursor: pointer;
}
.modal-options > div.active {
    color: #fff;
    background: #000;
    cursor: default;
}
.modal-options > > div:not(.active):hover {
    color: #fff;
    background: #000;
}
@media (min-width: 768px) {
    .modal:before {
        display: inline-block;
        vertical-align: middle;
        content: " ";
        height: 100%;
    }
    .modal-dialog {
        width: 688px;
        margin: auto;
    }
}
@media (max-width: 1199px) {
    .modal-options > div {
        font-size: 18px;
        width: 64px;
        height: 66px;
    }
}
@media (max-width: 991px) {
    .modal-options > div {
        font-size: 16px;
        width: 56px;
        height: 58px;
    }
}
</style>
<div id="modal-size" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                <div class="modal-head d-f ai-c jc-sb">
                    <div>Необходимо выбрать размер!</div>
                    <button type="button" class="close" data-dismiss="modal"><svg class="i-close" width="14" height="14"><use xlink:href="image/icons.svg#i-close" xmlns:xlink="http://www.w3.org/1999/xlink"></use></svg></button>
                </div>
                <div class="modal-in">
                    <div class="modal-products"></div>
                    <div class="modal-button">
                        <button onclick="$('#modal-size').modal('hide');$('.kit-box #kit-button-cart').click();" id="kit-button-cart" type="button" class="btn-b"></button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript"><!--
$('#modal-size').delegate('.modal-options > div', 'click', function() {
    $(this).closest('.modal-options').find('.active').removeClass('active');
    $(this).addClass('active');

    var product_id = $(this).closest('.product-thumb').data('id');
    var on = $(this).find('input').attr('name');
    var ov = $(this).find('input').val();

    $('.kit-box [data-id="' + product_id + '"] .p-options').find('.active').removeClass('active');
    $('.kit-box [data-id="' + product_id + '"] input[name="' + on + '"][value="' + ov + '"]').parent().addClass('active');
});
//--></script>
