<div class="modal-content" id="onepcheckout">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title">{{ heading_title }}</h4>
  </div>
  <div class="modal-body">
    {% if error_warning %}
    <div class="warning form-error">{{ error_warning }}</div>
    {% endif %}
    <form action="{{ action }}" id="login_form" method="post" enctype="multipart/form-data" >
        <div class="form-group form-group-error required">
            <input id="input-opc-email" type="text" name="email" value="{{ email }}" class="form-checkout focus">
            <div class="float-label">{{ entry_email }} <span>*</span></div>
            <div class="form-error">
                {% if error_email %}{{ error_email }}{% endif %}
            </div>
        </div>
        <div class="form-group form-group-error required">
            <input id="input-opc-password" type="password" name="password" value="{{ password }}" class="form-checkout focus">
            <div class="float-label">{{ entry_password }} <span>*</span></div>
            <div class="right"><span data-href="{{ forgotten }}" class="btn-href" >{{ text_forgotten }}</span></div>
            <div class="form-error">
                {% if error_password %}{{ error_password }}{% endif %}
            </div>
        </div>
        <div class="buttons">
            <input type="submit" value="{{ button_login }}" class="opc-btn" />
            <div class="border"></div>
            <span data-href="{{ register }}"   class="opc-btn btn-gray" >{{ button_create_account }}</span>
        </div>
    </form>
  </div>
</div>