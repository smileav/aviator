{{ header }}
<div  class="container">
  {% include('aviator/template/common/breadcrumb.twig') %}
</div>
<div class="account" id="account-reset">
  <div  class="container">
    {% if success %}
      <div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> {{ success }}</div>
    {% endif %}
    <div class="dflex">
      {% if column_left %}
        <div class="col-left">
          {{ column_left }}
        </div>
      {% endif %}
      <div class="col-right">
        <div class="head">
          <h1>{{ heading_title }}</h1>
        </div>
        <div class="form_return" id="onepcheckout">
          <form action="{{ action }}" method="post" enctype="multipart/form-data" class="form-horizontal">
            <h5>{{ text_password }}</h5>
            <div class="form-group form-group-error required">
              <input id="input-opc-password" type="password" name="password" value="{{ password }}" class="form-checkout focus">
              <div class="float-label">{{ entry_password }} <span>*</span></div>
              <div class="form-error">
                {% if error_password %}{{ error_password }}{% endif %}
              </div>
            </div>
            <div class="form-group form-group-error required">
              <input id="input-opc-confirm" type="password" name="confirm" value="{{ confirm }}" class="form-checkout focus">
              <div class="float-label">{{ entry_confirm }} <span>*</span></div>
              <div class="form-error">
                {% if error_confirm %}{{ error_confirm }}{% endif %}
              </div>
            </div>
            <div class="buttons">
              <a href="{{ back }}" class="opc-btn btn-white">{{ button_back }}</a>
              <input type="submit" value="{{ button_continue }}" class="opc-btn" />
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>




{{ footer }}