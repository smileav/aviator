
<div class="modal-content" id="onepcheckout">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title">{{ heading_title }}</h4>
  </div>
  <div class="modal-body">

    <form action="{{ action }}" id="forgotten_form" method="post" enctype="multipart/form-data" >
      <div class="form-group form-group-error required">
        <input id="input-opc-email" type="text" name="email" value="{{ email }}" class="form-checkout focus">
        <div class="float-label">{{ entry_email }} <span>*</span></div>
        <div class="form-error">
          {% if error_warning %}{{ error_warning }}{% endif %}
        </div>
      </div>

      <div class="buttons">
        <input type="submit" value="{{ button_continue }}" class="opc-btn" />
        <div class="border"></div>
        <span data-href="{{ login }}"   class="opc-btn btn-gray" >{{ button_back }}</span>
      </div>
    </form>
  </div>
</div>

