{{ header }}
<div class="container">
{% include('aviator/template/common/breadcrumb.twig') %}
</div>
<style>
  [id*="information-information-"] #content .row {
    margin: 0 -8px;
  }
  [id*="information-information-"] #content .row > div {
    padding: 0 8px;
  }
  [id*="information-information-"] h2 {
    margin: 0 0 32px;
  }
  [id*="information-information-"] p {
    color: #7c7c7c;
    font-size: 14px;
    margin-bottom: 32px;
  }
  [id*="information-information-"] p:has(+ ul) {
    margin-bottom: 8px;
  }
  [id*="information-information-"] ul {
    color: #7c7c7c;
    font-size: 14px;
    margin-bottom: 32px;
  }
  [id*="information-information-"] img {
    margin-bottom: 32px;
  }

  #information-information-4 h1 {
    font-size: 80px;
    line-height: 90%;
    letter-spacing: -0.02em;
    margin: 0 0 32px;
    max-width: 1024px;
  }
  #information-information-4 .info-inner {
    border: 1px solid #c0c2c9;
    padding: 16px 16px 8px ;
  }
  #information-information-4 .info-inner p {
    margin-bottom: 8px;
  }
  #information-information-4 .info-inner a {
    color: #7c7c7c;
    text-decoration: underline;
  }
  #information-information-4 .info-inner a:hover {
    color: #000;
  }
  #information-information-6 .col-in {
    border: 1px solid #c0c2c9;
    padding: 32px 32px 0 32px;
  }
  @media (max-width: 1199px) {
    [id*="information-information-"] h2 {
      margin: 0 0 24px;
    }
    [id*="information-information-"] img {
      margin-bottom: 24px;
    }
    [id*="information-information-"] p {
      margin-bottom: 24px;
    }
    [id*="information-information-"] ul {
      margin-bottom: 24px;
    }
    #information-information-4 h1 {
      font-size: 58px;
      margin: 0 0 24px;
    }
  }
  @media (max-width: 991px) {
    [id*="information-information-"] h2 {
      margin: 0 0 16px;
    }
    [id*="information-information-"] img {
      margin-bottom: 16px;
    }
    [id*="information-information-"] p {
      margin-bottom: 16px;
    }
    [id*="information-information-"] ul {
      margin-bottom: 16px;
    }
    #information-information-4 h1 {
      font-size: 36px;
      margin: 0 0 16px;
    }
    #information-information-6 .col-in {
      border: unset;
      padding: 0;
    }
    #information-information-6 #content > .row > div:first-child {
      margin-bottom: 48px;
    }
  }
</style>
<div id="information-information-{{ information_id }}" class="container">
  <div class="row">
    <div id="content" class="col-sm-12">
      {% set h1_class = '' %}
      {% if information_id == 6 %}
      {% set h1_class = ' class="hidden"' %}
      {% endif %}
      <h1{{ h1_class }}>{{ heading_title }}</h1>
      {% if image_4 %}
      <img src="{{ image_4 }}" class="img-responsive"/>
      {% endif %}
      {{ description }}
    </div>
  </div>
</div>
{{ footer }}
